{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2015","dom"],
    "target": "es5",
    "outDir": "lib",
    "strict": true,
    "jsx": "react",
    "declarationDir": "lib",
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "pretty": true
  }
}
